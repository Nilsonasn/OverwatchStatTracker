                                         Grid.ColumnSpan="2"
                                         VerticalContentAlignment="Center"
                                         Width="270"
                                         Text="{Binding Path=GameData.OtherPeople}"></TextBox>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Map">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <ComboBox Margin="3,0,3,0"
                                      Grid.Column="0"
                                      x:Name="MapList"
                                      DisplayMemberPath="TypeName"
                                      SelectedItem="{Binding Path=SelectedMapType, Mode=OneWayToSource}">
                            </ComboBox>
                            <ComboBox Margin="3,0,3,0"
                                      Grid.Column="1"
                                      x:Name="SelectedMapType_Maps"
