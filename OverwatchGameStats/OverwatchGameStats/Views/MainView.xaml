        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OverwatchGameStats.Views"
        mc:Ignorable="d"
        Title="MainView" Height="520" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
