                                        Grid.Row="0">
                                <CheckBox Content="{Binding Path=GameData.People[0].Name}"
                                          IsChecked="{Binding Path=GameData.People[0].IsSelected}"
                                          Margin="5"></CheckBox>
                                <CheckBox Margin="5"
                                          Content="{Binding Path=GameData.People[1].Name}"
                                          IsChecked="{Binding Path=GameData.People[1].IsSelected}"></CheckBox>
                                <CheckBox Margin="5"
                                          Content="{Binding Path=GameData.People[2].Name}"
                                          IsChecked="{Binding Path=GameData.People[2].IsSelected}"></CheckBox>
                            </StackPanel>
                            <StackPanel Grid.Column="1"
                                        Grid.Row="0">
                                <CheckBox Margin="5"
                                          Content="{Binding Path=GameData.People[3].Name}"
                                          IsChecked="{Binding Path=GameData.People[3].IsSelected}"></CheckBox>
                                <CheckBox Margin="5"
                                          Content="{Binding Path=GameData.People[4].Name}"
