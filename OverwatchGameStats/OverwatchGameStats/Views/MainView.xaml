            </Grid>
            <StackPanel Grid.Row="0"
                        Grid.Column="2">
                <GroupBox Header="Medals">
                    <StackPanel>
                        <ComboBox Margin="0,3,0,3"
                                  SelectedIndex="{Binding Path=GameData.MedalsReceived[0].Rank}">
                            <ComboBoxItem Content="{Binding Path=GameData.MedalsReceived[0].MedalType}"></ComboBoxItem>
                            <ComboBoxItem>None</ComboBoxItem>
                            <ComboBoxItem>Bronze</ComboBoxItem>
                            <ComboBoxItem>Silver</ComboBoxItem>
                            <ComboBoxItem>Gold</ComboBoxItem>
                        </ComboBox>
                        <ComboBox Margin="0,3,0,3"
                                  SelectedIndex="{Binding Path=GameData.MedalsReceived[1].Rank}">
                            <ComboBoxItem Content="{Binding Path=GameData.MedalsReceived[1].MedalType}"></ComboBoxItem>
                            <ComboBoxItem>None</ComboBoxItem>
                            <ComboBoxItem>Bronze</ComboBoxItem>
                            <ComboBoxItem>Silver</ComboBoxItem>
                            <ComboBoxItem>Gold</ComboBoxItem>
                        </ComboBox>

                        <ComboBox Margin="0,3,0,3"
                                  SelectedIndex="{Binding Path=GameData.MedalsReceived[2].Rank}">
                            <ComboBoxItem Content="{Binding Path=GameData.MedalsReceived[2].MedalType}"></ComboBoxItem>
                            <ComboBoxItem>None</ComboBoxItem>
                            <ComboBoxItem>Bronze</ComboBoxItem>
                            <ComboBoxItem>Silver</ComboBoxItem>
                            <ComboBoxItem>Gold</ComboBoxItem>
                        </ComboBox>
                        <ComboBox Margin="0,3,0,3"
                                  SelectedIndex="{Binding Path=GameData.MedalsReceived[3].Rank}">
                            <ComboBoxItem Content="{Binding Path=GameData.MedalsReceived[3].MedalType}"></ComboBoxItem>
                            <ComboBoxItem>None</ComboBoxItem>
                            <ComboBoxItem>Bronze</ComboBoxItem>
                            <ComboBoxItem>Silver</ComboBoxItem>
                            <ComboBoxItem>Gold</ComboBoxItem>
                        </ComboBox>
                        <ComboBox Margin="0,3,0,3"
                                  SelectedIndex="{Binding Path=GameData.MedalsReceived[4].Rank}">
                            <ComboBoxItem Content="{Binding Path=GameData.MedalsReceived[4].MedalType}"></ComboBoxItem>
                            <ComboBoxItem>None</ComboBoxItem>
                            <ComboBoxItem>Bronze</ComboBoxItem>
                            <ComboBoxItem>Silver</ComboBoxItem>
                            <ComboBoxItem>Gold</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="Outcome">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0"
                                    Orientation="Horizontal">
                            <RadioButton VerticalContentAlignment="Center" IsChecked="{Binding Path=GameData.GameOutcome}" Margin="3">Win</RadioButton>
                            <RadioButton VerticalContentAlignment="Center" Margin="3">Loss</RadioButton>
                        </StackPanel>
                        <StackPanel Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    Orientation="Horizontal">
                            <Label HorizontalAlignment="Right">SR:</Label>
                            <TextBox Width="55"
                                     HorizontalAlignment="Right"
                                     VerticalContentAlignment="Center"
                                     Text="{Binding Path=GameData.SkillRatingStr}"></TextBox>
                        </StackPanel>

                    </Grid>

                </GroupBox>
                <Button Grid.Row="1"
                        Grid.Column="2"
                        Height="35"
                        Margin="10,5,10,5"
                        x:Name="Submit">Submit</Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
