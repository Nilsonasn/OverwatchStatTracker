                    </GroupBox>
                </StackPanel>
            </Grid>
            <StackPanel Grid.Row="0"
                        Grid.Column="2">
                <GroupBox Header="Medals">
                    <StackPanel>
                        <ComboBox Margin="0,3,0,3"
                                  SelectedIndex="0">
                            Eliminations
                            <ComboBoxItem>None</ComboBoxItem>
                            <ComboBoxItem>Bronze</ComboBoxItem>
                            <ComboBoxItem>Silver</ComboBoxItem>
                            <ComboBoxItem>Gold</ComboBoxItem>
                        </ComboBox>
                        <ComboBox Margin="0,3,0,3"
                                  SelectedIndex="0">
                            Objective Kills
                            <ComboBoxItem>None</ComboBoxItem>
                            <ComboBoxItem>Bronze</ComboBoxItem>
                            <ComboBoxItem>Silver</ComboBoxItem>
                            <ComboBoxItem>Gold</ComboBoxItem>
                        </ComboBox>

                        <ComboBox Margin="0,3,0,3"
                                  SelectedIndex="0">
                            Objective Time
                            <ComboBoxItem>None</ComboBoxItem>
                            <ComboBoxItem>Bronze</ComboBoxItem>
                            <ComboBoxItem>Silver</ComboBoxItem>
                            <ComboBoxItem>Gold</ComboBoxItem>
                        </ComboBox>
                        <ComboBox Margin="0,3,0,3"
                                  SelectedIndex="0">
                            Hero Damge Done
                            <ComboBoxItem>None</ComboBoxItem>
                            <ComboBoxItem>Bronze</ComboBoxItem>
                            <ComboBoxItem>Silver</ComboBoxItem>
                            <ComboBoxItem>Gold</ComboBoxItem>
                        </ComboBox>
                        <ComboBox Margin="0,3,0,3"
                                  SelectedIndex="0">
                            Healing Done
                            <ComboBoxItem>None</ComboBoxItem>
                            <ComboBoxItem>Bronze</ComboBoxItem>
                            <ComboBoxItem>Silver</ComboBoxItem>
                            <ComboBoxItem>Gold</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
