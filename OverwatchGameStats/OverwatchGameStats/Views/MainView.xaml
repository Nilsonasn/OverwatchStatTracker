                            <CheckBox Margin="5">Hanzo</CheckBox>
                            <CheckBox Margin="5">Junkrat</CheckBox>
                            <CheckBox Margin="5">Mccree</CheckBox>
                            <CheckBox Margin="5">Mei</CheckBox>
                            <CheckBox Margin="5">Pharah</CheckBox>

                        </StackPanel>
                        <StackPanel HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Grid.Column="1">
                            <CheckBox Margin="5">Reaper</CheckBox>
                            <CheckBox Margin="5">Soldier 76</CheckBox>
                            <CheckBox Margin="5">Sombra</CheckBox>
                            <CheckBox Margin="5">Symmetra</CheckBox>
                            <CheckBox Margin="5">Torbjorn</CheckBox>
                            <CheckBox Margin="5">Tracer</CheckBox>
                            <CheckBox Margin="5">Widowmaker</CheckBox>
                        </StackPanel>
                    </Grid>
                </Border>
                <Grid Grid.Column="3"
                      Margin="20,0,20,0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Grid.Column="0">
                        <CheckBox Margin="5">Ana</CheckBox>
                        <CheckBox Margin="5">Baptiste</CheckBox>
                        <CheckBox Margin="5">Brigitte</CheckBox>
                        <CheckBox Margin="5">Lucio</CheckBox>
                        <CheckBox Margin="5">Mercy</CheckBox>
                        <CheckBox Margin="5">Moira</CheckBox>
                        <CheckBox Margin="5">Zenyatta</CheckBox>
                    </StackPanel>
                </Grid>
            </Grid>
        </GroupBox>
        <Grid Grid.Column="1"
              Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="114*" />
                <ColumnDefinition Width="171*" />
                <ColumnDefinition Width="91*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.RowSpan="2">
                <GroupBox Header="Communication"
                          Height="auto">
                    <StackPanel Orientation="Horizontal">
                        <RadioButton Margin="5">
                            None
                        </RadioButton>
                        <RadioButton Margin="5">
                            Average
                        </RadioButton>
                        <RadioButton Margin="5">
                            Good
                        </RadioButton>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="Game Type">
                    <StackPanel Orientation="Horizontal">
                        <RadioButton Margin="3">
                            Quick Play
                        </RadioButton>
                        <RadioButton Margin="3"
                                     IsChecked="True">
                            Competitive
                        </RadioButton>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="Date/Time">
                    <StackPanel>
                        <CheckBox Margin="2,5,2,5"
