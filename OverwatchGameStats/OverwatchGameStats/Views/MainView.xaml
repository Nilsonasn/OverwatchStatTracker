                                <CheckBox Margin="5">Kr0nai</CheckBox>
                                <CheckBox Margin="5">WhiteRice</CheckBox>
                            </StackPanel>
                            <StackPanel Grid.Row="1"
                                        Grid.ColumnSpan="2"
                                        Orientation="Horizontal">
                                <Label Grid.Row="1"
                                       Grid.ColumnSpan="2"
                                       Width="50"
                                       HorizontalAlignment="Left"
                                       Height="auto">Others</Label>
                                <TextBox Grid.Row="1"
                                         Grid.ColumnSpan="2"
                                         VerticalContentAlignment="Center"
                                         Width="270"></TextBox>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Map">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <ComboBox
                                      Margin="3,0,3,0"
                                      Grid.Column="0"
                                      x:Name="MapList"
                                      DisplayMemberPath="TypeName"
                                      SelectedItem="{Binding Path=SelectedMap, Mode=OneWayToSource}">
