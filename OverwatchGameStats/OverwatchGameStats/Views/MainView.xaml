                            <ComboBox Margin="3"
                                      SelectedIndex="0">
                                <ComboBoxItem>AM</ComboBoxItem>
                                <ComboBoxItem>PM</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
            <Grid Grid.Row="0"
                  Grid.Column="1"
                  Grid.RowSpan="2">
                <StackPanel>
                    <GroupBox Header="Stack Size">
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Margin="3">0</RadioButton>
                            <RadioButton Margin="3">1</RadioButton>
                            <RadioButton Margin="3">2</RadioButton>
                            <RadioButton Margin="3">3</RadioButton>
                            <RadioButton Margin="3">4</RadioButton>
                            <RadioButton Margin="3">5</RadioButton>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Header="Team Members">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Column="0"
                                        Grid.Row="0">
                                <CheckBox Margin="5">Trevor</CheckBox>
                                <CheckBox Margin="5">Spencer</CheckBox>
                                <CheckBox Margin="5">Bryce</CheckBox>
                            </StackPanel>
