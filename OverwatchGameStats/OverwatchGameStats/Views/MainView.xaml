            <Grid Grid.Row="0"
                  Grid.Column="1"
                  Grid.RowSpan="2">
                <StackPanel>
                    <GroupBox Header="Stack Size">
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Margin="3"
                                         VerticalContentAlignment="Center"
                                         IsChecked="{Binding Path=GameData.StackSize[0].IsSelected}">0</RadioButton>
                            <RadioButton Margin="3"
                                         VerticalContentAlignment="Center"
                                         IsChecked="{Binding Path=GameData.StackSize[1].IsSelected}">1</RadioButton>
                            <RadioButton Margin="3"
                                         IsChecked="{Binding Path=GameData.StackSize[2].IsSelected}">2</RadioButton>
                            <RadioButton Margin="3"
                                         VerticalContentAlignment="Center"
                                         IsChecked="{Binding Path=GameData.StackSize[3].IsSelected}"
                                         Content="3"></RadioButton>
                            <RadioButton Margin="3"
                                         IsChecked="{Binding Path=GameData.StackSize[4].IsSelected}">4</RadioButton>
                            <RadioButton Margin="3"
                                         VerticalContentAlignment="Center"
                                         IsChecked="{Binding Path=GameData.StackSize[5].IsSelected}">5</RadioButton>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Header="Team Members">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
